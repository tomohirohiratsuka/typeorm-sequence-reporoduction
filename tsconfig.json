{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "typeorm/**/*",
    "ormconfig.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.e2e-spec.ts"
  ]
}
