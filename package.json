{
  "name": "chatcrm-be",
  "private": true,
  "version": "1.0.0",
  "description": "Backend service for ChatRM app",
  "author": "haryus",
  "license": "MIT",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "comment": "because of https://github.com/alphamikle/nest_transact/issues/32, nestjs/common, nestjs/core, nestjs/websockets, nestjs/testing, are fixed to v9.2.1",
    "prebuild": "rimraf dist",
    "build": "nest build --path tsconfig.build.json",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write ./**/*.{ts,js,json,*rc}",
    "start": "npm run start:prod",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/src/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "ts-typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:create": "typeorm migration:create \"./typeorm/migrations/\"",
    "migration:generate": "npm run ts-typeorm migration:generate ./typeorm/migrations/ -- -d ormconfig.ts",
    "migration:up": "npm run ts-typeorm migration:run -- -d ormconfig.ts",
    "migration:down": "npm run ts-typeorm migration:revert -- -d ormconfig.ts",
    "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.341.0",
    "@line/bot-sdk": "^7.5.2",
    "@nestjs/axios": "^1.0.1",
    "@nestjs/cli": "^9.1.5",
    "@nestjs/common": "9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "9.2.1",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/platform-socket.io": "^9.2.1",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjs/websockets": "9.2.1",
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/japanese-holidays": "^1.0.1",
    "@types/mime-types": "^2.1.1",
    "@types/multer": "^1.4.7",
    "@types/tmp": "^0.2.3",
    "argon2": "^0.30.2",
    "axios": "^1.2.2",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cron-parser": "^4.7.0",
    "csv": "^6.2.5",
    "fluent-ffmpeg": "^2.1.2",
    "japanese-holidays": "^1.0.10",
    "luxon": "^3.2.1",
    "mime-types": "^2.1.35",
    "nest-commander": "^3.7.1",
    "nest-transact": "^9.1.0",
    "nestjs-pino": "^3.1.1",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.8.0",
    "pino-http": "^8.3.0",
    "pino-pretty": "^9.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.6.0",
    "sharp": "^0.32.1",
    "tmp": "^0.2.1",
    "typeorm": "^0.3.11",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "9.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cron": "^2.0.0",
    "@types/jest": "^29.2.4",
    "@types/luxon": "^3.2.0",
    "@types/node": "^18.11.12",
    "@types/nodemailer": "^6.4.6",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "lint-staged": "^13.1.0",
    "pg-mem": "^2.6.4",
    "prettier": "^2.8.1",
    "run-script-webpack-plugin": "^0.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
